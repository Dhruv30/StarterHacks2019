        android:textColor="#ffffff"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="-47dp"
        android:src="@drawable/icon"/>

</LinearLayout>